<?php
if(isset($_POST['submit_envoyer']))
{
  $erreur_pseudo = false;
  $erreur_message = false;
  if(empty($_POST['pseudo']))
  {
    //ereur au niveau du pseudo
    $erreur_pseudo = true;
  }
  if(empty($_POST['message']))
  {
    //erreur au niveau du message
    $erreur_message = true;
  }
   
  if(!$erreur_pseudo && !$erreur_passwd)
  {
      $pseudo = mysql_real_escape_string(trim($_POST['pseudo']));
      $message= mysql_real_escape_string(trim($_POST['message']));
      mysql_query('INSERT INTO commentaires_informatique VALUES(\'\',"'.$pseudo.'" , "'.$message.'" , "'.$_SERVER["REMOTE_ADDR"].'")') or exit("Erreur lors de l'insertion d'un message dans la base de données:<br />\n".mysql_error());
 
      echo 'Message sauvegardé';
  }
  else{
     if($erreur_pseudo){
       echo 'Pseudo doit être rempli';
     }
     if($erreur_message ){
       echo 'Message doit être rempli';
     }
  }
}
 
